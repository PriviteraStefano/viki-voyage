---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import {SITE_DESCRIPTION, SITE_TITLE} from '../consts';
import '../styles/global.css'
import {getEntry, render} from 'astro:content';

const entry = await getEntry("info", "intro");
if (!entry) {
  throw new Error("Could not find intro")
}

const {Content} = await render(entry)
---

<!doctype html>
<html lang="en">
<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION}/>
<body class="bg-primary-foreground">
<Header/>
<main class="flex flex-col h-screen items-center rounded-2xl bg-linear-to-b from-primary mx-6 py-4">
  <h1 class="text-7xl text-secondary">WELCOME</h1>
  <Content/>
</main>
<Footer/>
</body>
</html>
